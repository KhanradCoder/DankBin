<% @posts.five_days_ago.sort_by { |post| post.cached_votes_total, post.created_at
 }.reverse.each do |link| %>
  <div class="link row clearfix">
    <h2 color='#93c54b'>
      <%= link_to link.title, link %><br>
      <small class="author">Submitted <%= time_ago_in_words(link.created_at) %> by
        <%= link.user.name %></small>
    </h2>
  </div>
  <div class="btn-group">
  <%= link_to like_post_path(link), method: :put, class: "btn btn-default btn-sm" do %>
    <i class="fa fa-arrow-up" aria-hidden="true"></i>
    <%= link.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_post_path(link), method: :put, class: "btn btn-default btn-sm" do %>
    <i class="fa fa-arrow-down" aria-hidden="true"></i>
    <%= link.get_downvotes.size %>
  <% end %>
</div>
<hr style="height:1px;border:none;color:#c3c2bb;background-color:#c3c2bb;" />
<% end %>
