<% @posts.five_days_ago.sort_by { |post| post.created_at}.reverse.each do |post| %>
  <div class="link row clearfix">
    <h2 color='#93c54b'>
      <%= link_to post.title, post %><br>
      <small class="author">Submitted <%= time_ago_in_words(post.created_at) %> by
        <%= post.user.name %></small>
    </h2>
  </div>
  <div class="btn-group">
  <%= link_to like_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
    <i class="fa fa-arrow-up" aria-hidden="true"></i>
    <%= post.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
    <i class="fa fa-arrow-down" aria-hidden="true"></i>
    <%= post.get_downvotes.size %>
  <% end %>
</div>
<% if post.link != '' %>
  <%= link_to 'Visit URL', post.link, method: :put, target: '_blank',
  class: "btn btn-info btn-sm pull-right" %>
<% end %>
<hr style="height:1px;border:none;color:#c3c2bb;background-color:#c3c2bb;" />
<% end %>
